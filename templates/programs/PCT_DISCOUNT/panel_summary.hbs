<h2 class="squatch-panel-title">
  Rewards
</h2>

<div class="squatch-progress">
  <div class="progress">
    <div class="progress-bar" style="width:{{discountRewardBalance.totalDiscountPercent}}%"></div>
  </div>

  <div class="squatch-progress-legend">
    <div class="squatch-progress-legend-item">
      <div class="progress">
        <div class="progress-bar" style="width:100%"></div>
      </div>

      {{#if discountRewardBalance.totalDiscountPercent}}{{discountRewardBalance.totalDiscountPercent}}{{else}}0{{/if}}% Active discount
    </div>

    <div class="squatch-progress-legend-item">
      <div class="progress">
        <div class="progress-bar" style="width:0%"></div>
      </div>

      {{#if discountRewardBalance.totalDiscountPercent}}{{math '100 - ' discountRewardBalance.totalDiscountPercent}}{{else}}100{{/if}}% Discount available
    </div>
  </div>
</div>
